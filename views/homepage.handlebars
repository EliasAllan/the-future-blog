<!-- Loop over each object in the projects array -->
{{#each blogPosts as |post| }}
<div class="row-mb-4">
  <div class="col-md-5">
    <h2 class="titlebox">
      <a href="/posts/{{post.id}}">{{post.title}}</a>
    </h2>
    </div>
    <h3>
      <a href="/posts/{{post.id}}">{{post.content}}</a>
    </h3>
    <h4>
      <p>Created by {{post.user.name}} on {{createdAt}}</p>
    </h4>
  </div>
</div>
{{/each}}
